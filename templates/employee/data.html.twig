{% extends 'base.html.twig' %}

{% block title %}TJS{% endblock %}

{% block body %}
    <h1 id="main_header">TJS Task</h1>

    <div id="employee_content">
        <h2 id="employees_h2">Employees Data</h2>
        <table id="employee_table">
            <tr>
                <th>First Name:</th>
                <th>Last Name:</th>
                <th>Date of Birth:</th>
                <th>Email Address:</th>
            </tr>
            {% for i in employees %}
                <tr>
                    <td>{{ i.fName }}</td>
                    <td>{{ i.lName }}</td>
                    <td>{{ i.dob|date("d/m/y") }}</td>
                    <td>{{ i.email }}</td>

                </tr>
            {% endfor %}
        </table>
    </div>
    </br>
    <a href="/TJs/public/index">Go Back</a>
{% endblock %}


